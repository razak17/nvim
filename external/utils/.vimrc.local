set packpath=$XDG_DATA_HOME/rvim/site

set runtimepath=$XDG_CONFIG_HOME/rvim
set runtimepath^=$XDG_CONFIG_HOME/rvim/after
set runtimepath^=$XDG_DATA_HOME/rvim/site
set runtimepath^=/usr/local/share/nvim/runtime

syntax off
filetype off

let g:loaded_tarPlugin = 1
let g:loaded_tar= 1
let g:loaded_tarPlugin= 1
let g:loaded_zip= 1
let g:loaded_zipPlugin= 1
let g:loaded_getscript= 1
let g:loaded_getscriptPlugin= 1
let g:loaded_vimball= 1
let g:loaded_vimballPlugin= 1
let g:loaded_matchit= 1
let g:loaded_matchparen= 1
let g:loaded_2html_plugin= 1
let g:loaded_logiPat= 1
let g:loaded_rrhelper= 1
let g:loaded_netrw= 1
let g:loaded_netrwPlugin= 1
let g:loaded_netrwSettings= 1
let g:loaded_netrwFileHandlers= 1
let g:loaded_fzf= 1
let g:loaded_skim= 1
let g:loaded_tutor_mode_plugin= 1
let g:loaded_python_provider = 0
let g:loaded_ruby_provider = 0
let g:loaded_perl_provider = 0

set exrc
set secure
set encoding=utf-8
set fileencoding=utf-8
set guicursor=n-v-c-sm:block,i-ci-ve:block,r-cr-o:block
set t_Co=256
set shortmess+=c
set iskeyword+=-
set ruler
set mouse=a
set mousefocus
set noswapfile
set undofile
set nobackup
set nowritebackup
set clipboard+=unnamedplus
set hidden
set number relativenumber
set hlsearch
set noerrorbells
set magic
set noshowcmd
set formatoptions-=cro
set laststatus=0
set showtabline=0
set nowrap
set shell=/bin/zsh
set colorcolumn=""
set nocursorline
set noshowmode

highlight! link SignColumn Normal
highlight StatusLine guifg=NONE guibg=NONE guisp=NONE gui=NONE blend=NONE
highlight TabLineFill guifg=NONE guibg=NONE guisp=NONE gui=NONE blend=NONE
highlight Todo guifg=#AF4B57 guibg=NONE guisp=NONE gui=bold blend=NONE
highlight COlorColumn guibg=#4E525C
highlight CursorLine guibg=#4E525C
highlight LineNr guifg=#5B6268

let mapleader=" "
nnoremap n j
nnoremap z u
nnoremap W q
nnoremap <TAB> :bnext<CR>
nnoremap <S-TAB> :bprevious<CR>
nnoremap <C-z>    :undo<CR>
xnoremap K :move '<-2<CR>gv-gv
xnoremap J :move '>+0<CR>gv-gv
xnoremap N :move '>+0<CR>gv-gv
nnoremap <Leader>x :q<CR>
nnoremap <Leader>y "+y
vnoremap <Leader>y' "+y
nnoremap <Leader>aY gg"+yG
nnoremap <Leader>aV gg"+VG
nnoremap <Leader>aD gg"+VG
nnoremap <Leader>chw :h <C-R>=expand("<cword>")<CR><CR>
