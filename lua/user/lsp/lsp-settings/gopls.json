{
  "go.buildOnSave": "off",
  "gopls": {
    "ui.codelenses": {
      "enabled": true,
      "generate": true,
      "gc_details": false,
      "test": true,
      "tidy": true
    },
    "ui.diagnostic.analyses": {
      "unusedparams": true,
      "loopclosure": true
    },
    "build.directoryFilters": [
      "-node_modules"
    ],
    "ui.completion.usePlaceholders": true,
    "ui.diagnostic.staticcheck": true

  },
  "go.lintTool": "golangci-lint",
  "go.formatTool": "goimports"
}
